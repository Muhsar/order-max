extends layout
block content
  .w3-col.m9#myDiv
    .container-fluid
      .w3-row-padding
        .w3-col.m12
          .w3-card.w3-round.w3-white
            .w3-container.w3-padding
              button.w3-button.btn-block.w3-theme(type='button' onclick="document.getElementById('id01').style.display='block'")
                i.fa.fa-pencil
                |   Create New Post
      .w3-container.w3-card.w3-white.w3-round.w3-margin
        br
        img.w3-left.w3-circle.w3-margin-right(src='social_files/avatar2.png' alt='Avatar' style='width:60px')
        span.w3-right.w3-opacity 1 min
        h4 John Doe
        br
        hr.w3-clear
        #demo.carousel.slide(data-ride='carousel')
          ul.carousel-indicators
            li.active(data-target='#demo' data-slide-to='0')
            li(data-target='#demo' data-slide-to='1')
            li(data-target='#demo' data-slide-to='2')
          .carousel-inner
            .carousel-item.active
              img(src='images/cover.png' alt='Los Angeles' width='100%' height='500')
            .carousel-item
              img(src='images/crossing.png' alt='Chicago' width='100%' height='500')
            .carousel-item
              img(src='images/thongs.png' alt='New York' width='100%' height='500')
          a.carousel-control-prev(href='#demo' data-slide='prev')
            span.carousel-control-prev-icon
          a.carousel-control-next(href='#demo' data-slide='next')
            span.carousel-control-next-icon
        p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
  .w3-col.m3
    .container-fluid       
      .w3-card.w3-round.w3-white.w3-center
        p Upcoming Events:
        .w3-container
          img(src='social_files/forest.jpg' alt='Forest' style='width:100%;')
          p
            strong Holiday
          p Friday 15:00
          p
            button.w3-button.w3-block.w3-theme-l4 Info
  #id01.w3-modal
      .w3-modal-content.w3-card-4.w3-animate-zoom(style='max-width:600px')
        .w3-center
          br
          span.w3-button.w3-xlarge.w3-transparent.w3-display-topright(onclick="document.getElementById('id01').style.display='none'" title='Close') ×

        form.w3-container(action='/admin/news' method='post' enctype='multipart/form-data')
          .w3-section
            h3 Create a new post
            label
              b Particular
            select.custom-select.w3-input.w3-animate-input.w3-border(name='particular' required='')
              option(value='space')
              option(value='Cover') Cover
              option(value='Crossing') Crossing
              option(value='Sandals') Sandals
              option(value='Thong') Thong
            label
            b Choose Your Preffered Designer
            select.custom-select.w3-input.w3-animate-input.w3-border(name='designer' required='')
              option(value='space')
              option(value='Chloe') Chloe
              option(value='Gucci') Gucci
              option(value='Fendi') Fendi
              option(value='Zanooti') Zanooti
              option(value='Versace') Versace
              option(value='Prada') Prada
              option(value='Bally') Bally
              option(value='Louis Vuitton') Louis Vuitton
            label
            b Sole Type
            select.custom-select.w3-input.w3-animate-input.w3-border(name='sole' required='')
              option(value='space')
              option(value='Double') Double
              option(value='Single') Single
            h4 upload multiple images
            input.w3-input.w3-animate-input#photo(type='file' name="photo" multiple accept="image/gif, image/png, image/jpeg, image/jpg")
            br
            .alert.alert-info <strong> Note ! </strong> you can select more than one file, but a max. of 3
            .w3-container.w3-border-top.w3-padding-16.w3-light-grey
              input.btn.btn-block.btn-info(type='submit' value='Post')