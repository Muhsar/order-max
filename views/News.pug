extends layout
block content
  .w3-col.m9#myDiv
    .container-fluid
      .w3-container.w3-card.w3-white.w3-round.w3-margin
        br
        img.w3-left.w3-circle.w3-margin-right(src='social_files/avatar2.png' alt='Avatar' style='width:60px')
        span.w3-right.w3-opacity 1 min
        h4 John Doe
        br
        hr.w3-clear
        #demo.carousel.slide(data-ride='carousel')
          ul.carousel-indicators
            li.active(data-target='#demo' data-slide-to='0')
            li(data-target='#demo' data-slide-to='1')
            li(data-target='#demo' data-slide-to='2')
          .carousel-inner
            .carousel-item.active
              img(src='images/cover.png' alt='Los Angeles' width='100%' height='500')
            .carousel-item
              img(src='images/crossing.png' alt='Chicago' width='100%' height='500')
            .carousel-item
              img(src='images/thongs.png' alt='New York' width='100%' height='500')
          a.carousel-control-prev(href='#demo' data-slide='prev')
            span.carousel-control-prev-icon
          a.carousel-control-next(href='#demo' data-slide='next')
            span.carousel-control-next-icon
        p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
